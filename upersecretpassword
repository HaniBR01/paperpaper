[32m+[m[32m        event.delete()[m
[32m+[m[32m        messages.success(request, 'Evento removido com sucesso!')[m
[32m+[m[32m        return redirect('events_list')[m
[32m+[m[41m    [m
[32m+[m[32m    context = {[m
[32m+[m[32m        'event': event[m
[32m+[m[32m    }[m
[32m+[m[32m    return render(request, 'paperpaper/event_confirm_delete.html', context)[m
[32m+[m
