[32m+[m[32m@staff_member_required[m
[32m+[m[32mdef event_create(request):[m
[32m+[m[32m    """Criar novo evento"""[m
[32m+[m[32m    if request.method == 'POST':[m
[32m+[m[32m        name = request.POST.get('name')[m
[32m+[m[32m        acronym = request.POST.get('acronym')[m
[32m+[m[32m        promoting_entity = request.POST.get('promoting_entity')[m
[32m+[m[41m        [m
[32m+[m[32m        if name and acronym and promoting_entity:[m
[32m+[m[32m            event = Event.objects.create([m
[32m+[m[32m                name=name,[m
[32m+[m[32m                acronym=acronym,[m
[32m+[m[32m                promoting_entity=promoting_entity[m
[32m+[m[32m            )[m
[32m+[m[32m            messages.success(request, 'Evento criado com sucesso!')[m
[32m+[m[32m            return redirect(event.get_absolute_url())[m
[32m+[m[32m        else:[m
[32m+[m[32m            messages.error(request, 'Por favor, preencha todos os campos.')[m
[32m+[m[41m    [m
[32m+[m[32m    return render(request, 'paperpaper/event_form.html')[m
[32m+[m
[32m+[m[32m@staff_member_required[m
[32m+[m[32mdef event_edit(request, slug):[m
[32m+[m[32m    """Editar evento existente"""[m
[32m+[m[32m    event = get_object_or_404(Event, slug=slug)[m
[32m+[m[41m    [m
[32m+[m[32m    if request.method == 'POST':[m
[32m+[m[32m        name = request.POST.get('name')[m
[32m+[m[32m        acronym = request.POST.get('acronym')[m
[32m+[m[32m        promoting_entity = request.POST.get('promoting_entity')[m
[32m+[m[41m        [m
[32m+[m[32m        if name and acronym and promoting_entity:[m
[32m+[m[32m            event.name = name[m
[32m+[m[32m            event.acronym = acronym[m
[32m+[m[32m            event.promoting_entity = promoting_entity[m
[32m+[m[32m            event.save()[m
[32m+[m[32m            messages.success(request, 'Evento atualizado com sucesso!')[m
[32m+[m[32m            return redirect(event.get_absolute_url())[m
[32m+[m[32m        else:[m
[32m+[m[32m            messages.error(request, 'Por favor, preencha todos os campos.')[m
[32m+[m[41m    [m
[32m+[m[32m    context = {[m
[32m+[m[32m        'event': event,[m
[32m+[m[32m        'is_edit': True[m
[32m+[m[32m    }[m
[32m+[m[32m    return render(request, 'paperpaper/event_form.html', context)[m
[32m+[m
[32m+[m[32m@staff_member_required[m
[32m+[m[32mdef event_delete(request, slug):[m
